@model NAA.Data.Application

@{
    ViewBag.Title = "Delete your application";
}

<h2>Delete your application</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ApplicantId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicantId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UniversityId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UniversityId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PersonalStatement)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PersonalStatement)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TeacherReference)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherReference)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TeacherContactDetails)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherContactDetails)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UniversityOffer)
        </dt>

        <dd>
            @switch (Model.UniversityOffer)
            {
                case "P":
                    @Html.DisplayName("Pending")
                    break;
                case "R":
                    @Html.DisplayName("Reject")
                    break;
                case "U":
                    @Html.DisplayName("Unconditional")
                    break;
                case "C":
                    @Html.DisplayName("Conditional")
                    break;
                default:
                    break;
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Firm)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Firm)*@
            @if (Model.Firm.HasValue)
            {
                if (Model.Firm.Value)
                {
                    @Html.DisplayName("Enrolled")
                }
                else
                {
                    @Html.DisplayName("Dismissed")
                }
            }
            else
            {
                @Html.DisplayName("-")
            }
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "GetAllApplications", new { id = ViewBag.applicantId })
        </div>
    }
</div>
